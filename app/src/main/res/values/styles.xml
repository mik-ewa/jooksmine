    <style name="Error_username">
        <item name="android:fontFamily">@font/kanit_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#C01D1D</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:queryBackground">@color/transparent</item>
        <item name="android:background">@drawable/background_search_view</item>
        <item name="searchIcon">@null</item>
    </style>
</resources>
