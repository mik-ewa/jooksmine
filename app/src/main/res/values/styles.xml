    <style name="Error">
        <item name="android:fontFamily">@font/kanit_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8E1C1C</item>
    </style>

    <style name="Error_small">
        <item name="android:fontFamily">@font/kanit_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#8E1C1C</item>
