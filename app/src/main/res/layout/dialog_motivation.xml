<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dialog_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">

        <ImageView
            android:id="@+id/icon_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/margin_8"
            app:srcCompat="@drawable/icon_close" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/DialogHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_minus_20"
            android:layout_marginBottom="@dimen/dimen_10"
            android:scaleType="center"
            android:text="@string/my_motivation_is" />

        <LinearLayout
            android:id="@+id/ll_motivation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_motivation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_input"
                android:inputType="text"
                android:maxLength="70"
                android:padding="@dimen/dimen_4"
                android:textCursorDrawable="@null" />

            <TextView
                android:id="@+id/tv_meter"
                style="@style/Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/meter_motivation" />
        </LinearLayout>

        <Button
            android:id="@+id/button_save"
            style="@style/ButtonSecondaryStyle"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="@dimen/margin_14"
            android:text="@string/save" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
