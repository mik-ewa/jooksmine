<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clFriend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_20"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginEnd="@dimen/margin_20"
    android:layout_marginBottom="@dimen/margin_5">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/width_36"
        android:layout_height="@dimen/height_36"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_profile_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_profile_photo" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_nickname"
        style="@style/Body5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Alexla" />


    <ImageView
        android:id="@+id/iv_challenge"
        android:layout_width="@dimen/size_min_icon_touch_target"
        android:layout_height="@dimen/size_min_icon_touch_target"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/margin_10"
        android:paddingStart="@dimen/margin_3"
        android:paddingEnd="@dimen/margin_3"
        android:src="@drawable/icon_run_together"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
